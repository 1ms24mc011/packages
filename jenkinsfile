pipeline {
  agent any

  stages {

    stage('environment setup') {
      steps {
        echo "settingup environment"
        sh 'python3 --version'
      }
    }

    stage ('installing packages') {
      steps {
        echo "Installing packages"
        sh 'pip3 install -r requirements.txt'
      }
    }

    stage ('running script') {
      steps {
        echo "executing script"
        sh 'python3 test.py'
      }
    }
  }
}
